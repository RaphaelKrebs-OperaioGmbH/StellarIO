@model IEnumerable<StellarIO.Models.Planet>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Welcome to your Dashboard</h1>
    <p>Manage your planets and resources here.</p>
</div>

@if (Model != null && Model.Any())
{
    <h2>Your Planets</h2>
    <div class="row">
        @foreach (var planet in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header">
                        <h4>@planet.Name</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Resources</h5>
                                <hr />
                                <p class="mb-1"><strong>Iron:</strong> @planet.Iron</p>
                                <p class="mb-1"><strong>Silver:</strong> @planet.Silver</p>
                                <p class="mb-1"><strong>Aluminium:</strong> @planet.Aluminium</p>
                                <p class="mb-1"><strong>H2:</strong> @planet.H2</p>
                                <p class="mb-1"><strong>Energy:</strong> @planet.Energy</p>
                            </div>
                            <div class="col-md-6">
                                <h5>Buildings</h5>
                                <hr />
                                <ul>
                                    @foreach (var building in planet.Buildings)
                                    {
                                        <li>@building.Name (Level: @building.Level)</li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <hr />
                        <div class="text-center mt-3">
                            <button class="btn btn-primary" onclick="location.href='@Url.Action("Build", "Building", new { planetId = planet.Id })'">Build</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>You have no planets yet.</p>
}
